<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MapScreen">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="@drawable/map_screen_belfast_650x780">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:id="@id/go_to_lagan_screen"
                    android:background="@drawable/map_screen_lagan_button_220x200"
                    android:layout_alignParentRight="true" android:layout_alignParentTop="true"
                    android:layout_marginTop="220dp" android:layout_marginLeft="150dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button android:layout_width="110dp" android:layout_height="100dp"
                    android:id="@id/map_to_city_centre_screen"
                    android:background="@drawable/map_screen_city_centre_button_220x200"
                    android:layout_alignLeft="@id/go_to_lagan_screen" android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp" android:layout_marginTop="120dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button android:layout_width="110dp" android:layout_height="100dp"
                    android:id="@id/map_to_uni_screen"
                    android:background="@drawable/map_screen_uni_button_220x200"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="40dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="350dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:id="@id/map_to_home_screen"
                    android:background="@drawable/app_exit_text_125x60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" android:layout_alignParentBottom="true"
                    android:layout_marginTop="300dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@id/go_to_icon_screen"
                    android:background="@drawable/app_icons_text_250x60"
                    android:layout_alignRight="@id/map_to_home_screen" android:layout_alignParentTop="true"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/map_to_user_rating"
                    android:background="@drawable/app_submit_text_250x60"
                    android:layout_alignParentLeft="true" android:layout_alignTop="@id/go_to_icon_screen"/>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
