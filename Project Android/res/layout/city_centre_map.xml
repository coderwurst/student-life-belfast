        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:alignmentMode="alignBounds" android:layout_gravity="center">
            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/map_screen_to_party_icon_50x50"
                    android:id="@id/centre_to_party3" android:layout_gravity="center_horizontal|bottom"
                    android:layout_column="2" android:layout_row="3"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="230dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="330dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/map_screen_to_party_icon_50x50"
                    android:id="@id/centre_to_party2" android:layout_gravity="right|bottom"
                    android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                    android:layout_column="1" android:layout_marginTop="350dp" android:layout_marginLeft="120dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/map_screen_to_party_icon_50x50"
                    android:id="@id/centre_to_party1" android:layout_gravity="right|top"
                    android:layout_column="8" android:layout_alignParentLeft="true" android:layout_marginLeft="230dp"
