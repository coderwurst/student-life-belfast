        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/map_screen_to_shop_icon_50x50"
                    android:id="@id/centre_to_shop1" android:layout_gravity="center"
                    android:layout_column="2" android:layout_alignParentLeft="true" android:layout_marginLeft="100dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="230dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/map_screen_to_shop_icon_50x50"
                    android:id="@id/centre_to_shop3" android:layout_gravity="center_horizontal|top"
                    android:layout_column="5" android:layout_alignParentLeft="true" android:layout_marginLeft="100dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="180dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/map_screen_to_eat_icon_50x50"
                    android:id="@id/centre_to_eat3" android:layout_gravity="right|center_vertical"
                    android:layout_column="1" android:layout_alignParentLeft="true" android:layout_marginLeft="150dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="100dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/map_screen_to_eat_icon_50x50"
                    android:id="@id/centre_to_eat1" android:layout_gravity="left|center_vertical"
                    android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                    android:layout_column="3" android:layout_marginLeft="180dp" android:layout_marginTop="200dp"/>
        </RelativeLayout>
    </FrameLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_home_125x50"
            android:id="@id/centre_to_map_screen" android:layout_gravity="right|center_vertical"
            android:layout_alignRight="@+id/frameLayout" android:layout_alignBottom="@+id/imageView"
            android:layout_marginTop="500dp"/>

</RelativeLayout>